<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.core.dao.normalize.InfoRefDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.core.model.normalize.InfoRef">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="parentId" jdbcType="INTEGER" property="parentId" />
        <result column="childId" jdbcType="INTEGER" property="childId" />
        <association column="parentId" property="parent"
                     select="com.paper.ssm.core.dao.normalize.InformationDao.selectSimpleByPrimaryKey" />
        <association column="childId" property="child"
                     select="com.paper.ssm.core.dao.normalize.InformationDao.selectSimpleByPrimaryKey" />
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `norm_info_ref` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.core.model.normalize.InfoRef">
        select * from `norm_info_ref`
        <where>
            <if test="parentId != null">
                parentId = #{parentId}
            </if>
        </where>
        <where>
            <if test="childId != null">
                childId = #{childId}
            </if>
        </where>
        ;
    </select>

    <insert id="insert" parameterType="com.paper.ssm.core.model.normalize.InfoRef" useGeneratedKeys="true" keyProperty="id">
        insert into `norm_info_ref`
        (parentId, `childId`)
        values
        (#{parentId},#{childId})
    </insert>

</mapper>