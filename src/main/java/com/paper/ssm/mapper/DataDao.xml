<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mapper.DataDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.dataPlane.Data">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
    </resultMap>

    <insert id="insert" parameterType="com.paper.ssm.model.dataPlane.Data" useGeneratedKeys="true">
        insert into `user` (`username`, `password`)
        values (#{username,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR})
    </insert>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `element_data` where id = #{pk};
    </select>

    <update id="update" parameterType="com.paper.ssm.model.dataPlane.Data">
        update `user`
        set
        `username` = #{username,jdbcType=VARCHAR},
        `description` = #{description,jdbcType=VARCHAR},
        `background` = #{background,jdbcType=VARCHAR},
        `avatar` = #{avatar,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.dataPlane.Data">
        select * from `element_data` where g1Id = #{g1Id}
        AND direction = #{direction}
    </select>

</mapper>