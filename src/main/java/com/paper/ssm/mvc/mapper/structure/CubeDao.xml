<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.mapper.structure.CubeDao">

    <sql id="Constant_List" >
        1 as IS_INNER, 0 as NOT_INNER, 1 as INNER_INPUT_SIDE
    </sql>

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.structure.node.Cube">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <collection column="{inputId=id,inner=IS_INNER,side=INNER_INPUT_SIDE}"
                    property="innerBridgeList" ofType="com.paper.ssm.model.structure.Line.Bridge"
                    javaType="java.util.List" select="com.paper.ssm.mvc.mapper.structure.BridgeDao.selectListByQuery"/>
        <collection column="{inputId=id,inner=NOT_INNER}"
                    property="nextBridgeList" ofType="com.paper.ssm.model.structure.Line.Bridge"
                    javaType="java.util.List" select="com.paper.ssm.mvc.mapper.structure.BridgeDao.selectListByQuery"/>
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT *, <include refid="Constant_List" /> from `element_cube` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.structure.node.Cube">
        select *, <include refid="Constant_List" /> from `element_cube`;
    </select>

</mapper>