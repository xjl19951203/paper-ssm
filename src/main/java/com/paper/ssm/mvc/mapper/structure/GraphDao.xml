<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.mapper.structure.GraphDao">

    <sql id="Constant_List" >
        1 as IS_INNER, 0 as NOT_INNER, 1 as INNER_INPUT_SIDE
    </sql>

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.structure.graph.Graph">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <collection column="{graphId=id,side=INNER_INPUT_SIDE}"
                    property="innerEdgeList" ofType="com.paper.ssm.model.structure.Line.Edge"
                    javaType="java.util.List" select="com.paper.ssm.mvc.mapper.structure.EdgeDao.selectListByQuery"/>
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT *, <include refid="Constant_List" /> from `element_graph` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.structure.graph.Graph">
        select * from `element_graph`;
    </select>

</mapper>