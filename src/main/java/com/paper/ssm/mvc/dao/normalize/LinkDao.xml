<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.normalize.LinkDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.normalize.Link">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="chainId" jdbcType="INTEGER" property="chainId" />
        <result column="baseId" jdbcType="INTEGER" property="baseId" />
        <association column="chainId" property="chain"
                     select="com.paper.ssm.mvc.dao.normalize.ChainDao.selectSimpleByPrimaryKey" />
        <association column="baseId" property="attribute"
                     select="com.paper.ssm.mvc.dao.normalize.AttributeDao.selectByPrimaryKey" />
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `norm_link` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.normalize.Link">
        select * from `norm_link`
        <where>
            <if test="chainId != null">
                chainId = #{chainId}
            </if>
        </where>
        ;
    </select>

    <insert id="insert" parameterType="com.paper.ssm.model.normalize.Link" useGeneratedKeys="true" keyProperty="id">
        insert into `norm_link`
        (chainId, `baseId`)
        values
        (#{chainId},#{baseId})
    </insert>

</mapper>