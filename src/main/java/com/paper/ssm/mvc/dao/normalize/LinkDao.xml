<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.normalize.LinkDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.normalize.Link">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="chainId" jdbcType="INTEGER" property="chainId" />
        <result column="leftId" jdbcType="INTEGER" property="leftId" />
        <result column="rightId" jdbcType="INTEGER" property="rightId" />
        <association column="leftId" property="left"
                     select="com.paper.ssm.mvc.dao.normalize.RuleDao.selectByPrimaryKey" />
        <association column="rightId" property="right"
                     select="com.paper.ssm.mvc.dao.normalize.RuleDao.selectByPrimaryKey" />
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `norm_link` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.normalize.Link">
        select * from `norm_link`
        <where>
            <if test="chainId != null">
                chainId = #{chainId}
            </if>
        </where>
        ;
    </select>

</mapper>