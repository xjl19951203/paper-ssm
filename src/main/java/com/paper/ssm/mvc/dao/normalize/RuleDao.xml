<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.normalize.RuleDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.normalize.Rule">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="style" jdbcType="VARCHAR" property="style" />
        <result column="initialId" jdbcType="INTEGER" property="initialId" />
        <result column="rangeId" jdbcType="INTEGER" property="rangeId" />
        <result column="typeId" jdbcType="INTEGER" property="typeId" />
        <result column="unitId" jdbcType="INTEGER" property="unitId" />
        <association column="initialId" property="initial"
                     select="com.paper.ssm.mvc.dao.normalize.InitialDao.selectByPrimaryKey" />
        <association column="rangeId" property="range"
                     select="com.paper.ssm.mvc.dao.normalize.RangeDao.selectByPrimaryKey" />
        <association column="typeId" property="type"
                     select="com.paper.ssm.mvc.dao.normalize.TypeDao.selectByPrimaryKey" />
        <association column="unitId" property="unit"
                     select="com.paper.ssm.mvc.dao.normalize.UnitDao.selectByPrimaryKey" />
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `norm_rule` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.normalize.Rule">
        select * from `norm_rule`;
    </select>

</mapper>