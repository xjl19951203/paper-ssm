<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.normalize.RuleDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.normalize.Rule">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="label" jdbcType="VARCHAR" property="label" />
        <result column="value" jdbcType="VARCHAR" property="value" />
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `norm_rule` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.normalize.Rule">
        select * from `norm_rule`;
    </select>

    <insert id="insert" parameterType="com.paper.ssm.model.normalize.Rule" useGeneratedKeys="true" keyProperty="id">
        insert into `norm_rule`
        (label, `value`)
        values
        (#{label},#{value})
    </insert>

    <update id="update" parameterType="com.paper.ssm.model.normalize.Rule">
        update `norm_rule` set
        label = #{label,jdbcType=VARCHAR},
        `value` = #{value,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

</mapper>