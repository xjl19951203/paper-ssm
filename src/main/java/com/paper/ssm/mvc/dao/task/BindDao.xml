<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.task.BindDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.task.Bind">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="chainId" jdbcType="INTEGER" property="chainId" />
        <result column="nodeId" jdbcType="INTEGER" property="nodeId" />
        <association column="chainId" property="chain"
                     select="com.paper.ssm.mvc.dao.normalize.ChainDao.selectSimpleByPrimaryKey" />
        <association column="nodeId" property="node"
                     select="com.paper.ssm.mvc.dao.structure.NodeDao.selectSimpleByPrimaryKey" />
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `task_bind` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.task.Bind">
        select * from `task_bind`
        <where>
            <if test="taskId != null">
                taskId = #{taskId}
            </if>
            <if test="chainId != null">
                and chainId = #{chainId}
            </if>
            <if test="nodeId != null">
                and nodeId = #{nodeId}
            </if>
        </where>
        ;
    </select>

</mapper>