<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.structure.HyperlinkDao">

    <sql id="Base_Column_List" >
        pipeId,inputId,outputId
    </sql>

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.structure.Hyperlink">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="label" jdbcType="VARCHAR" property="label" />
        <result column="pointId" jdbcType="INTEGER" property="pointId" />
        <result column="nodeId" jdbcType="INTEGER" property="nodeId" />
        <association property="node" column="nodeId"
                     select="com.paper.ssm.mvc.dao.structure.NodeDao.selectByPrimaryKey" />
    </resultMap>
    <insert id="insert" parameterType="com.paper.ssm.model.structure.Hyperlink" useGeneratedKeys="true" keyProperty="id">
        insert into `com_hyperlink`
        (<include refid="Base_Column_List" /> )
        values
        (#{pipeId},#{inputId},#{outputId})
    </insert>


    <select id="selectByPointId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select * from `com_hyperlink` where pointId = #{pointId} limit 0, 1;
    </select>

    <update id="update" parameterType="com.paper.ssm.model.structure.Flow">
        update `com_hyperlink` set
        pipeId = #{pipeId,jdbcType=INTEGER},
        inputId = #{inputId,jdbcType=INTEGER},
        outputId = #{outputId,jdbcType=INTEGER}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="delete" parameterType="com.paper.ssm.model.structure.Flow">
        SET foreign_key_checks = 0;
        delete from  `com_hyperlink` where id = #{id};
        SET foreign_key_checks = 1;
    </delete>

    <insert id="insertList" parameterType="java.util.List">
        insert into `com_hyperlink` (<include refid="Base_Column_List" /> )
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.pipeId,jdbcType=INTEGER}, #{item.inputId,jdbcType=INTEGER},
            #{item.outputId,jdbcType=INTEGER})
        </foreach>
    </insert>

</mapper>