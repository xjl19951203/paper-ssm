<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.normalize.BaseDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.normalize.Base">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="value" jdbcType="VARCHAR" property="value" />
        <result column="ruleId" jdbcType="INTEGER" property="ruleId" />
        <association property="rule" column="ruleId"
                     select="com.paper.ssm.mvc.dao.normalize.RuleDao.selectByPrimaryKey" />
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `norm_base` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.normalize.Base">
        select * from `norm_base`;
    </select>

    <insert id="insert" parameterType="com.paper.ssm.model.normalize.Base" useGeneratedKeys="true" keyProperty="id">
        insert into `norm_base`
        (title, `value`, ruleId)
        values
        (#{title},#{value},#{ruleId})
    </insert>

    <update id="update" parameterType="com.paper.ssm.model.normalize.Base">
        update `norm_base` set
        ruleId = #{ruleId,jdbcType=INTEGER},
        title = #{title,jdbcType=VARCHAR},
        `value` = #{value,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

</mapper>