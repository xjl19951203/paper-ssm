<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.instantiate.BindDao">

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.instantiate.Bind">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="chainId" jdbcType="INTEGER" property="chainId" />
        <result column="nodeId" jdbcType="INTEGER" property="nodeId" />
        <association column="chainId" property="chain"
                     select="com.paper.ssm.mvc.dao.normalize.ChainDao.selectSimpleByPrimaryKey" />
        <association column="nodeId" property="node"
                     select="com.paper.ssm.mvc.dao.structure.NodeDao.selectSimpleByPrimaryKey" />
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `ins_bind` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.instantiate.Bind">
        select * from `ins_bind`
        <where>
            <if test="instanceId != null">
                instanceId = #{instanceId}
            </if>
            <if test="chainId != null">
                and chainId = #{chainId}
            </if>
            <if test="nodeId != null">
                and nodeId = #{nodeId}
            </if>
        </where>
        ;
    </select>

    <insert id="insert" parameterType="com.paper.ssm.model.instantiate.Bind" useGeneratedKeys="true" keyProperty="id">
        insert into `ins_bind`
        (instanceId, chainId,nodeId)
        values
        (#{instanceId},#{chainId},#{nodeId})
    </insert>

    <update id="update" parameterType="com.paper.ssm.model.instantiate.Bind">
        update `ins_bind` set
        instanceId = #{instanceId,jdbcType=INTEGER},
        chainId = #{chainId,jdbcType=INTEGER},
        nodeId = #{nodeId,jdbcType=INTEGER}
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>