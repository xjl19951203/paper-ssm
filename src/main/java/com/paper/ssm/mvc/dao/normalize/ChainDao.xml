<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.normalize.ChainDao">

    <resultMap id="SimpleResultMap" type="com.paper.ssm.model.normalize.Chain">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
    </resultMap>

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.normalize.Chain">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <collection property="linkList" column="{chainId=id}" ofType="java.util.List"
                    select="com.paper.ssm.mvc.dao.normalize.LinkDao.selectListByQuery" />
    </resultMap>

    <select id="selectSimpleByPrimaryKey" resultMap="SimpleResultMap" parameterType="java.lang.Integer">
        SELECT * from `norm_chain` where id = #{pk};
    </select>


    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * from `norm_chain` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="BaseResultMap" parameterType="com.paper.ssm.model.normalize.Chain">
        select * from `norm_chain`;
    </select>

    <insert id="insert" parameterType="com.paper.ssm.model.normalize.Chain" useGeneratedKeys="true" keyProperty="id">
        insert into `norm_chain`
        (title)
        values
        (#{title})
    </insert>

    <update id="update" parameterType="com.paper.ssm.model.normalize.Chain">
        update `norm_chain` set
        title = #{title,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

</mapper>