<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.structure.NodeDao">

    <sql id="Constant_List" >
        1 as NEXT_DIRECTION, 2 as CHILD_DIRECTION, 3 as PARENT_DIRECTION
    </sql>

    <resultMap id="ListResultMap" type="com.paper.ssm.model.structure.Node">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="label" jdbcType="VARCHAR" property="label" />
        <collection column="{inputId=id,direction=CHILD_DIRECTION}"
                    property="childPipeList" ofType="com.paper.ssm.model.structure.Pipe"
                    javaType="java.util.List" select="com.paper.ssm.mvc.dao.structure.PipeDao.selectListByQuery"/>
    </resultMap>

    <resultMap id="SimpleResultMap" type="com.paper.ssm.model.structure.Node">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="label" jdbcType="VARCHAR" property="label" />
    </resultMap>

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.structure.Node">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="label" jdbcType="VARCHAR" property="label" />
        <collection column="{inputId=id,direction=CHILD_DIRECTION}"
                    property="childPipeList" ofType="com.paper.ssm.model.structure.Pipe"
                    javaType="java.util.List" select="com.paper.ssm.mvc.dao.structure.PipeDao.selectListByQuery"/>
        <collection column="{inputId=id,direction=PARENT_DIRECTION}"
                    property="parentPipeList" ofType="com.paper.ssm.model.structure.Pipe"
                    javaType="java.util.List" select="com.paper.ssm.mvc.dao.structure.PipeDao.selectListByQuery"/>
        <collection column="{inputId=id,direction=NEXT_DIRECTION}"
                    property="nextPipeList" ofType="com.paper.ssm.model.structure.Pipe"
                    javaType="java.util.List" select="com.paper.ssm.mvc.dao.structure.PipeDao.selectListByQuery"/>
    </resultMap>

    <select id="selectSimpleByPrimaryKey" resultMap="SimpleResultMap" parameterType="java.lang.Integer">
        SELECT *, <include refid="Constant_List" /> from `com_node` where id = #{pk};
    </select>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT *, <include refid="Constant_List" /> from `com_node` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="ListResultMap" parameterType="com.paper.ssm.model.structure.Node">
        select *, <include refid="Constant_List" /> from `com_node`;
    </select>

    <insert id="insert" parameterType="com.paper.ssm.model.structure.Node" useGeneratedKeys="true" keyProperty="id">
        insert into `com_node`
        (label)
        values
        (#{label})
    </insert>

    <update id="update" parameterType="com.paper.ssm.model.structure.Node">
        update `com_node` set
        label = #{label,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="delete" parameterType="com.paper.ssm.model.structure.Node">
        SET foreign_key_checks = 0;
        delete from  `com_node` where id = #{id};
        SET foreign_key_checks = 1;
    </delete>

</mapper>