<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paper.ssm.mvc.dao.structure.NodeDao">

    <sql id="Constant_List" >
        1 as INPUT_SIDE, 0 as OUTPUT_SIDE
    </sql>

    <resultMap id="SimpleResultMap" type="com.paper.ssm.model.structure.Node">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="label" jdbcType="VARCHAR" property="label" />
    </resultMap>

    <resultMap id="BaseResultMap" type="com.paper.ssm.model.structure.Node">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="label" jdbcType="VARCHAR" property="label" />
        <collection column="{parentId=id,side=INPUT_SIDE}"
                    property="childEdgeList" ofType="com.paper.ssm.model.structure.Edge"
                    javaType="java.util.List" select="com.paper.ssm.mvc.dao.structure.EdgeDao.selectListByQuery"/>
        <collection column="{childId=id,side=OUTPUT_SIDE}"
                    property="parentEdgeList" ofType="com.paper.ssm.model.structure.Edge"
                    javaType="java.util.List" select="com.paper.ssm.mvc.dao.structure.EdgeDao.selectListByQuery"/>
        <collection column="{inputId=id}"
                    property="pipeList" ofType="com.paper.ssm.model.structure.Pipe"
                    javaType="java.util.List" select="com.paper.ssm.mvc.dao.structure.PipeDao.selectListByQuery"/>
    </resultMap>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT *, <include refid="Constant_List" /> from `com_node` where id = #{pk};
    </select>

    <select id="selectListByQuery" resultMap="SimpleResultMap" parameterType="com.paper.ssm.model.structure.Node">
        select * from `com_node`;
    </select>

</mapper>